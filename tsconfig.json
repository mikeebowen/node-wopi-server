{
  "ts-node": {
    "files": true
  },
  "files": [
    "src/index.ts",
    "src/decs.d.ts"
  ],
  "compilerOptions": { /* Docs: https://www.typescriptlang.org/tsconfig */
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "bin",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    // "checkJs": true,
    "allowJs": false,
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "lib": [
      "es6"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnreachableCode": false,
    "useUnknownInCatchVariables": true, // TypeScript 4.4+ only!
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/decs.d.ts",
  ],
  "exclude": [
    "node_modules",
    "<node_internals>/**",
  ]
}